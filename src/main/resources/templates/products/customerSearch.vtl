<p>Search Results</p>


<div class="container">

    <table class="products-list">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        #foreach($product in $products)
        <tr>
            <td><img src="$product.getImage()" alt="n/a"></td>
            <td>$product.getName()</a></td>
            <td>$product.getDescription()</td>
            <td>Â£$product.formatToDecimal($product.getPrice())</td>
            #if ($product.availability)
            <form action="/basket" method="post">
                <td>Qty:<input class="inputbox" type="number" min="1" name="quantity" required="true"></td>
                <td>
                    <input id="id" class="inputbox" type="number" name="id" required="true" value="$product.getId()" hidden>
                </td>
                <td><input type="submit" value="Add to basket" class="button"></td>
            </form>
            #else
            <td class="trhide"></td>
            <td>Sorry, out of stock</td>
            <td class="trhide"></td>
            #end
        </tr>
        #end
    </table>

</div>

